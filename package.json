{
  "name": "letspreview-cli",
  "version": "0.0.0-semantically-released.0",
  "description": "A commandline tool for Lets PReview",
  "main": "index.js",
  "engines": {
    "node": ">=4.0"
  },
  "bin": {
    "letspreview": "index.js"
  },
  "scripts": {
    "lint": "eslint *.js spec/**",
    "test": "istanbul cover node_modules/jasmine/bin/jasmine.js ./spec/**/*",
    "report-coverage": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "publish-latest": "publish-latest --user-email nick+salte-bot@salte.io --user-name salte-bot",
    "semantic-release": "semantic-release pre && npm publish && npm run publish-latest && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salte-io/letspreview-cli.git"
  },
  "author": "The Salte Authors",
  "license": "BSD-3-Clause",
  "dependencies": {
    "chalk": "^1.1.3",
    "form-data": "^2.1.2",
    "node-fetch": "^1.6.3",
    "tar.gz": "^1.0.5",
    "uuid": "^3.0.1",
    "yargs": "^7.0.2"
  },
  "devDependencies": {
    "coveralls": "^2.13.1",
    "eslint": "^3.18.0",
    "eslint-config-google": "^0.7.1",
    "eslint-plugin-jasmine": "^2.2.0",
    "istanbul": "^0.4.5",
    "istanbul-coveralls": "^1.0.3",
    "jasmine": "^2.5.3",
    "semantic-release": "^6.3.6"
  }
}
